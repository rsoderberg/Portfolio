<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.mtag.app.muaythaiathletesguide.WorkoutsActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/gradient_button"
        android:onClick="onWodsActivity"
        android:text="@string/wods_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/gradient_button"
        android:onClick="onMartialActivity"
        android:text="@string/martial_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/gradient_button"
        android:onClick="onLiftingActivity"
        android:text="@string/lifting_button" />

</LinearLayout>
